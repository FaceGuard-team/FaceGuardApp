<!DOCTYPE html>

<title>Student</title>

{% block body %}
    <h1>Student</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ student.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{ student.username }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ student.roles ? student.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ student.password }}</td>
            </tr>
            <tr>
                <th>First_name</th>
                <td>{{ student.firstName }}</td>
            </tr>
            <tr>
                <th>Last_name</th>
                <td>{{ student.lastName }}</td>
            </tr>
            <tr>
                <th>Phone_number</th>
                <td>{{ student.phoneNumber }}</td>
            </tr>
            <tr>
                <th>Profile_image</th>
                <td>{{ student.profileImage }}</td>
            </tr>
            <tr>
                <th>Gender</th>
                <td>{{ student.gender }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ student.email }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_student_index') }}">back to list</a>

    <a href="{{ path('app_student_edit', {'id': student.id}) }}">edit</a>

    {{ include('student/_delete_form.html.twig') }}
{% endblock %}
